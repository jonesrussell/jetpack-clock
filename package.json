{
  "name": "jetpack-clock",
  "version": "1.0.0",
  "description": "Full-screen world clock application for remote team coordination",
  "main": "index.html",
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:prod": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "serve": "python3 -m http.server 8040",
    "dev": "npm run build & npm run serve"
  },
  "keywords": ["clock", "timezone", "remote", "team", "kiosk"],
  "author": "Jones",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  }
}
